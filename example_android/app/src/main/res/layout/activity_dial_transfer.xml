<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MusicTransferActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etDialPath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/btSelectDialFile"
                    android:background="@color/black"
                    android:hint="choose dial package..."
                    android:minHeight="40dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <Button
                    android:id="@+id/btSelectDialFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:onClick="btSelectDialFile"
                    android:text="@string/music_select"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <CheckBox
                android:id="@+id/cbCustomDial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom Dial (Photo)" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btInstall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="start"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/btStopInstall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="start"
                android:textColor="@color/white" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>